{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "lib": [
      "ES5",
      "ES6",
      "ES2015",
      "DOM"
    ],
  }
}
